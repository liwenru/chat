<import src="post-item/post-item-tpl"></import>
<swiper class="postSwiper" autoplay="{{true}}" indicator-dots="{{true}}" indicator-color="#fff" 
indicator-active-color="#666" circular="{{true}}">
    <swiper-item>
        <image class="" src="./../../images/post/cat.png"></image>
    </swiper-item>
     <swiper-item>
        <image class="" src="./../../images/post/vr.png"></image>
    </swiper-item>
     <swiper-item>
        <image class="" src="./../../images/post/bl.png"></image>
    </swiper-item>
</swiper>

<block wx:for="{{postList}}" wx:for-item="item" wx:key="key">
   <template is="postItemTpl" data="{{...item}}"></template>
</block>
